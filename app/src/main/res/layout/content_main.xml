<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.attendence.MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:text="Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="118dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="44dp"
        android:id="@+id/tv_id" />

    <TextView
        android:text="Roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="96dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_Roll" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Roll"
        android:layout_alignLeft="@+id/tv_Roll"
        android:layout_alignStart="@+id/tv_Roll"
        android:layout_marginTop="38dp"
        android:id="@+id/t_name" />

    <TextView
        android:text="Attendence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_name"
        android:layout_alignLeft="@+id/t_name"
        android:layout_alignStart="@+id/t_name"
        android:layout_marginTop="43dp"
        android:id="@+id/tv_attndnce" />

    <TextView
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_attndnce"
        android:layout_alignLeft="@+id/tv_attndnce"
        android:layout_alignStart="@+id/tv_attndnce"
        android:layout_marginTop="49dp"
        android:id="@+id/tv_status" />

    <TextView
        android:text="Class id :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_status"
        android:layout_alignLeft="@+id/tv_status"
        android:layout_alignStart="@+id/tv_status"
        android:layout_marginTop="58dp"
        android:id="@+id/tv_cls_id" />

    <TextView
        android:text="Section Id :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cls_id"
        android:layout_alignLeft="@+id/tv_cls_id"
        android:layout_alignStart="@+id/tv_cls_id"
        android:layout_marginTop="53dp"
        android:id="@+id/tv_section_id" />
</RelativeLayout>
